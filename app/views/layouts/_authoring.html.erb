<% if guide.authors.present? %>
  <%= content_for :authoring do %>
    <p class="small">
      <% if embedded_mode? %>
        <span class="hidden-md hidden-lg hidden-xl">
          <%= render partial: 'layouts/copyright' %> -
        </span>
      <% end %>
      <%= raw attribution_caption(guide) %>
    </p>
  <% end %>
<% end %>
